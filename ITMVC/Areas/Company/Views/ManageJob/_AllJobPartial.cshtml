@using ITMVC.Models.JOBVM
@model List<JobMM>
<div class="container">
    <div class="row">
        <div class="col-sm-12 d-flex justify-content-center" style="margin:auto">
            <div class="loader loadersdiv" id="JobShowDiv"></div>
        </div>
        <div class="col-sm-12">
            @if (Model.Any())
            {
                <table id="MyJobTable" style="display:table" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#Id</th>
                            <th scope="col">Title</th>
                            <th scope="col">Description</th>
                            <th scope="col">Num.Vacancy</th>
                            <th scope="col">Open Date</th>
                            <th scope="col">Close Date</th>
                            <th scope="col">Job Type</th>
                            <th scope="col">Email</th>
                            <th scope="col">Category</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var job in Model)
                        {
                            <tr>
                                <th scope="row">@job.JobMainId</th>
                                <td>@job.Title</td>
                                <td>@job.Description</td>
                                <td>@job.NumberOfVacancy</td>
                                <td>@job.OpenDate.ToShortDateString()</td>
                                <td>@job.CloseDate.ToShortDateString()</td>
                                <td>@job.JobTypes.ToString()</td>
                                <td>@job.CvAcceptEmail</td>
                                <td>@job.Category</td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <button type="button" class="btn btn-secondary" onclick="DeleteJobPartial('@job.JobMainId')">Delete</button>
                                        <button type="button" class="btn btn-secondary" onclick="LoadJobPartialEdit('@job.JobMainId')">Edit</button>
                                        <button type="button" class="btn btn-secondary">View</button>
                                    </div>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            }
            else
            {
                <p class="text-center">Dont Have Any Job Your Company</p>
            }
        </div>

    </div>
</div>
